[Unit]
Description=CrowdSec Log Processor (Agent mode - connects to remote LAPI)
After=network-online.target stream-pod.service traefik.service
Wants=stream-pod.service
Requires=traefik.service

[Container]
ContainerName=crowdsec-agent
Image=docker.io/crowdsecurity/crowdsec:v1.7.4-slim
Pod=stream.pod
EnvironmentFile=%h/plex/.env/crowdsec-agent.env
Volume=%h/plex/data/crowdsec-agent/config:/etc/crowdsec:Z
Volume=%h/plex/data/crowdsec-agent/data:/var/lib/crowdsec/data:Z
Volume=%h/plex/data/logs/traefik:/var/log/traefik:ro,z
Volume=%h/plex/config/crowdsec-agent/acquis.yml:/etc/crowdsec/acquis.yaml:ro,Z
NoNewPrivileges=true

[Install]
WantedBy=default.target
