[Unit]
Description=Plex Media Server
After=network-online.target stream-pod.service
Wants=stream-pod.service

[Container]
ContainerName=plex
Image=docker.io/linuxserver/plex:latest
Pod=stream.pod

EnvironmentFile=/srv/quartermaster/.env/plex.env
Environment=ENABLE_VAAPI=true

Volume=/mnt/PLUNDER/Media:/plunder:ro
Volume=/srv/quartermaster/data/plex/config:/config:Z
Volume=/srv/quartermaster/data/plex/transcode:/transcode:Z
Volume=/srv/quartermaster/logs/plex:/config/Library/Application Support/Plex Media Server/Logs:z

AddDevice=/dev/dri:/dev/dri
NoNewPrivileges=true
GroupAdd=keep-groups

[Install]
WantedBy=default.target
